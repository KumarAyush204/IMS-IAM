<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Manage: <%= orgName %></title>
    <!-- Bootstrap 5 CSS CDN -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" xintegrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
</head>
<body class="bg-light">

    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container-fluid">
            <span class="navbar-brand">Organization Management</span>
            <a href="/logout" class="btn btn-outline-light">Logout</a>
        </div>
    </nav>

    <div class="container mt-4">
        <div class="d-flex justify-content-between align-items-center mb-3">
            <h1 class="mb-0">Manage: <%= orgName %></h1>
            <a href="/dashboard" class="btn btn-secondary">Back to Dashboard</a>
        </div>

        <!-- Team Management Section -->
        <div class="card shadow-sm mb-4">
            <div class="card-header">
                <h2>Team Management</h2>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-8">
                        <h3>Existing Teams</h3>
                        <% if (teams.length > 0) { %>
                            <ul class="list-group">
                                <% teams.forEach(function(team) { %>
                                    <li class="list-group-item">
                                        <b><a href="/teams/<%= team.team_id %>"><%= team.team_name %></a></b>
                                        <% if (team.members && team.members.length > 0) { %>
                                            <ul class="list-unstyled mt-2 small">
                                                <% team.members.forEach(function(member) { %>
                                                    <li><%= member.name %> - (Role: <%= member.role_name %>)</li>
                                                <% }); %>
                                            </ul>
                                        <% } else { %>
                                            <p class="small text-muted mt-2 mb-0">No members assigned to this team yet.</p>
                                        <% } %>
                                    </li>
                                <% }); %>
                            </ul>
                        <% } else { %>
                            <p class="text-muted">No teams have been created yet.</p>
                        <% } %>
                    </div>
                    <div class="col-md-4">
                        <h3>Create a New Team</h3>
                        <form action="/organizations/<%= orgId %>/teams/create" method="POST">
                            <div class="mb-3">
                                <label for="team_name" class="form-label">Team Name:</label>
                                <input type="text" class="form-control" id="team_name" name="team_name" required>
                            </div>
                            <button type="submit" class="btn btn-primary w-100">Create Team</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>

        <!-- Member Management Section -->
        <div class="card shadow-sm mb-4">
            <div class="card-header">
                <h2>Member Management</h2>
            </div>
            <div class="card-body">
                <h3>Add New Member</h3>
                <form action="/organizations/<%= orgId %>/add" method="POST" class="row g-3">
                    <div class="col-auto flex-grow-1">
                        <input type="email" name="email" class="form-control" placeholder="Enter registered user's email" required>
                    </div>
                    <div class="col-auto">
                        <button type="submit" class="btn btn-primary">Add Member</button>
                    </div>
                </form>
                <hr>
                <h3>Current Members</h3>
                <% if (members.length > 0) { %>
                    <div class="table-responsive">
                        <table class="table table-striped table-hover align-middle">
                            <thead>
                                <tr>
                                    <th>Name</th>
                                    <th>Email</th>
                                    <th>Current Role</th>
                                    <th>Update Role</th>
                                    <th>Assign to Team</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% members.forEach(function(member) { %>
                                    <tr>
                                        <td><%= member.name %></td>
                                        <td><%= member.email %></td>
                                        <td><%= member.role_name %></td>
                                        <td>
                                            <% if (member.role_name !== 'Owner' && member.user_id !== user.id) { %>
                                                <form action="/organizations/<%= orgId %>/members/<%= member.user_id %>/update-role" method="POST" class="input-group">
                                                    <select name="new_role_id" class="form-select">
                                                        <% orgRoles.forEach(function(role) { %>
                                                            <% if (role.role_name !== 'Owner') { %>
                                                                <option value="<%= role.role_id %>" <%= member.role_id === role.role_id ? 'selected' : '' %>>
                                                                    <%= role.role_name %>
                                                                </option>
                                                            <% } %>
                                                        <% }); %>
                                                    </select>
                                                    <button type="submit" class="btn btn-outline-secondary">Update</button>
                                                </form>
                                            <% } else { %>
                                                <span>No actions available</span>
                                            <% } %>
                                        </td>
                                        <td>
                                            <% if (member.role_name !== 'Owner' && teams.length > 0) { %>
                                                <form action="/organizations/<%= orgId %>/members/<%= member.user_id %>/assign-team" method="POST" class="input-group">
                                                    <select name="team_id" class="form-select">
                                                        <% teams.forEach(function(team) { %>
                                                            <option value="<%= team.team_id %>"><%= team.team_name %></option>
                                                        <% }); %>
                                                    </select>
                                                    <button type="submit" class="btn btn-outline-secondary">Assign</button>
                                                </form>
                                            <% } else if (teams.length === 0) { %>
                                                <span>Create a team first</span>
                                            <% } else { %>
                                                <span>N/A for Owner</span>
                                            <% } %>
                                        </td>
                                    </tr>
                                <% }); %>
                            </tbody>
                        </table>
                    </div>
                <% } else { %>
                    <p class="text-muted">This organization has no members yet.</p>
                <% } %>
            </div>
        </div>
        
        <!-- Delete Organization Section -->
        <div class="card border-danger shadow-sm">
             <div class="card-header bg-danger text-white">
                <h2>Delete Organization</h2>
            </div>
            <div class="card-body">
                <p>This action is irreversible and will permanently delete the organization, all its teams, inventories, and member associations.</p>
                <button id="deleteButton" class="btn btn-danger">Delete this organization</button>
                <div id="confirmationForm" style="display:none;" class="mt-3">
                    <form action="/organizations/<%= orgId %>/delete" method="POST">
                        <div class="mb-3">
                            <label for="confirmation_name" class="form-label">To confirm, please type the organization's name: <b><%= orgName %></b></label>
                            <input type="text" class="form-control" id="confirmation_name" name="confirmation_name" required>
                        </div>
                        <button type="submit" class="btn btn-danger">I understand, permanently delete</button>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <script>
        document.getElementById('deleteButton').addEventListener('click', function() {
            document.getElementById('confirmationForm').style.display = 'block';
            this.style.display = 'none';
        });
    </script>
    <!-- Bootstrap 5 JS Bundle CDN -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" xintegrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
</body>
</html>
