<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Manage Team: <%= team.team_name %></title>
     <link rel="icon" type="image/x-icon" href="logo.png">
    <!-- Bootstrap 5 CSS CDN -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" xintegrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
</head>
<body class="bg-light">

    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container-fluid">
            <span class="navbar-brand">Team Management</span>
            <a href="/logout" class="btn btn-outline-light">Logout</a>
        </div>
    </nav>

    <div class="container mt-4">
        <div class="d-flex justify-content-between align-items-center mb-3">
            <h1 class="mb-0">Manage Team: <%= team.team_name %></h1>
            <a href="/organizations/<%= orgId %>/members" class="btn btn-secondary">Back to Organization</a>
        </div>

        <div class="card shadow-sm">
            <div class="card-header">
                <h2>Inventory Management</h2>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-8">
                        <h3>Assigned Inventories</h3>
                        <% if (inventories.length > 0) { %>
                            <ul class="list-group">
                                <% inventories.forEach(function(inventory, index) { %>
                                    <li class="list-group-item d-flex justify-content-between align-items-center">
                                        <a href="/inventories/<%= inventory.inventory_id %>?teamId=<%= team.team_id %>"><%= inventory.inventory_name %></a>
                                        
                                        <% if (userIsAdmin) { %>
                                            <div>
                                                <button id="deleteBtn-<%= index %>" class="btn btn-sm btn-outline-danger">Delete</button>
                                            </div>
                                        <% } %>
                                    </li>
                                    <% if (userIsAdmin) { %>
                                        <li id="confirmForm-<%= index %>" class="list-group-item" style="display:none;">
                                            <form action="/inventories/<%= inventory.inventory_id %>/delete" method="POST">
                                                <input type="hidden" name="teamId" value="<%= team.team_id %>">
                                                <div class="mb-2">
                                                    <label for="confirmation_name-<%= index %>" class="form-label small">
                                                        Type "<b><%= inventory.inventory_name %></b>" to confirm deletion:
                                                    </label>
                                                    <input type="text" class="form-control form-control-sm" id="confirmation_name-<%= index %>" name="confirmation_name" required>
                                                </div>
                                                <button type="submit" class="btn btn-sm btn-danger">Confirm Delete</button>
                                                <button type="button" id="cancelBtn-<%= index %>" class="btn btn-sm btn-secondary">Cancel</button>
                                            </form>
                                        </li>
                                    <% } %>
                                <% }); %>
                            </ul>
                        <% } else { %>
                            <p class="text-muted">This team has not been assigned any inventories yet.</p>
                        <% } %>
                    </div>
                    <% if (userIsAdmin) { %>
                        <div class="col-md-4">
                            <h3>Create New Inventory</h3>
                            <form action="/teams/<%= team.team_id %>/inventories/create" method="POST">
                                <input type="hidden" name="orgId" value="<%= orgId %>">
                                <div class="mb-3">
                                    <label for="inventory_name" class="form-label">Inventory Name:</label>
                                    <input type="text" class="form-control" id="inventory_name" name="inventory_name" required>
                                </div>
                                <button type="submit" class="btn btn-primary w-100">Create Inventory</button>
                            </form>
                        </div>
                    <% } %>
                </div>
            </div>
        </div>
    </div>

    <script>
        document.addEventListener('DOMContentLoaded', function() {
            <% inventories.forEach(function(inventory, index) { %>
                const deleteBtn = document.getElementById('deleteBtn-<%= index %>');
                const cancelBtn = document.getElementById('cancelBtn-<%= index %>');
                const confirmForm = document.getElementById('confirmForm-<%= index %>');

                if (deleteBtn) {
                    deleteBtn.addEventListener('click', function() {
                        if (confirmForm) confirmForm.style.display = 'block';
                    });
                }
                
                if (cancelBtn) {
                    cancelBtn.addEventListener('click', function() {
                        if (confirmForm) confirmForm.style.display = 'none';
                    });
                }
            <% }); %>
        });
    </script>
    <!-- Bootstrap 5 JS Bundle CDN -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" xintegrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
</body>
</html>
