<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Dashboard</title>
</head>
<body>
    <h1>Welcome, <%= user.name %>!</h1>
    <a href="/logout">Logout</a>
    <hr>
    
    <h2>Your Organizations</h2>
    <% if (organizations.length > 0) { %>
        <ul>
            <% organizations.forEach(function(org) { %>
                <li>
                    <b><%= org.org_name %></b> - (Your Role: <%= org.role_name %>)
                    
                    <form action="/organizations/<%= org.org_id %>/add" method="POST">
                        <input type="email" name="email" placeholder="Enter registered user's email" required>
                        <button type="submit">Add Member</button>
                    </form>

                    <a href="/organizations/<%= org.org_id %>/members">Manage Members</a>
                </li>
            <% }); %>
        </ul>
    <% } else { %>
        <p>You are not a member of any organizations yet. Create one to get started.</p>
    <% } %>
    
    <hr>
    
    <h2>Create a New Organization</h2>
    <form action="/organizations/create" method="POST">
        <div>
            <label for="org_name">Organization Name:</label>
            <input type="text" id="org_name" name="org_name" required>
        </div>
        <br>
        <button type="submit">Create Organization</button>
    </form>
</body>
</html>